{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C++ (modo consola)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-mconsole",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila el programa actual de C++ en modo consola"
        }
    ]
}
